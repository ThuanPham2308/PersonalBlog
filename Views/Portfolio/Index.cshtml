@{
    ViewBag.Title = "Portfolio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="portfolio section active" id="portfolio">
    <div class="container">
        <div class="row">
            <div class="section-title padd-15">
                <h2>Portfolio</h2>
            </div>
        </div>

        <!-- Portfolio Filters -->
        <div class="row">
            <div class="portfolio-filter padd-15">
                <button type="button" class="@(ViewBag.SelectedCategory == "all" ? "active" : "")"
                        onclick="location.href='@Url.Action("Index", new { category = "all" })'">
                    All
                </button>

                @foreach (var cat in ViewBag.Categories)
                {
                    <button type="button" class="@(ViewBag.SelectedCategory == cat ? "active" : "")"
                            onclick="location.href='@Url.Action("Index", new { category = cat })'">
                        @cat
                    </button>
                }
            </div>
        </div>

        <!-- Portfolio Items -->
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="portfolio-item padd-15">
                    <div class="portfolio-item-inner shadow-dark">
                        <div class="portfolio-img">
                            <img src="~/@item.Image" alt="@item.Title" />
                        </div>
                        <div class="portfolio-info">
                            <h4>@item.Title</h4>
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
