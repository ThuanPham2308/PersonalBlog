<section class="blog-detail section active" id="blog">
    <div class="container">
        <div class="row">
            <div class="section-title padd-15">
                <h2>@Model.Title</h2>
            </div>
        </div>
        <div class="row">
            <div class="blog-content padd-15">
                <div class="row">
                    <div class="blog-text padd-15">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>